# MediCore Client Configuration
# ══════════════════════════════════════════════════════════════════════════════
# This file configures MediCore to connect to a server on the LAN
# ══════════════════════════════════════════════════════════════════════════════

# Server Connection
SERVER_IP=192.168.1.100
SERVER_PORT=8080

# Connection Settings
CONNECTION_TIMEOUT=5000
RETRY_ATTEMPTS=3

# Local Cache (for offline mode)
ENABLE_CACHE=true
CACHE_PATH=./cache

# Auto-sync when connection restored
AUTO_SYNC=true
